<h1>Library of Books</h1>

<div ng-controller="LibraryCtrl">
	<form ng-submit="addLibrary()">
    <input type="text" ng-model="newLibrary.title" placeholder="Title">
    <input type="text" ng-model="newLibrary.owner" placeholder="Owner">
    <button>Add Library</button>
  </form>

<div ng-repeat="library in libraries">
	    <!-- This is where you should put your edit form -->
	    <!-- Use ng-show to toggle it on/off -->
	    <li>Library: {{library.title}} - Owner: {{library.owner}} <button ng-click="deleteLibrary()">Delete</button></li>



	<section ng-controller="BooksCtrl">


	  <form ng-submit="addBook()">
	    <input type="text" ng-model="newBook.title" placeholder="Title">
	    <input type="text" ng-model="newBook.author" placeholder="Author">
	    <input type="text" ng-model="newBook.description" placeholder="Description">
	    <button>Add Book</button>
	  </form>

	  <ul ng-repeat="book in library.books">
	    <!-- This is where you should put your edit form -->
	    <!-- Use ng-show to toggle it on/off -->
	    <li>BookTitle: {{book.title}}, by:  {{book.author}} <button ng-click="deleteBook()">Delete</button></li>
	  </ul>

	  </section>
	</div>
</div>